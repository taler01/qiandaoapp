<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!--点击时的颜色（泛白的深蓝浅蓝渐变）/ gradient实现渐变得方法-->
            <gradient android:angle="0" android:endColor="#4CEBFF" android:startColor="#4CEBFF" android:type="linear" />
            <corners android:radius="25dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <!--        <stroke android:width="1dp" />-->
        </shape>
    </item>

    <!--不点击时颜色-->
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="0" android:endColor="	#FFDEAD" android:startColor="#FFDEAD" android:type="linear" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#F08080" android:startColor="#F08080" android:type="linear" />
            <corners android:radius="25dp" />
        </shape>
    </item>

</selector>

